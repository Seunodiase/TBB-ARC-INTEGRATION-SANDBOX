{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "strict": true,
    "strictFunctionTypes": true,
    "target": "es2020"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*-spec.ts",
    "mocks",
    "coverage",
    "__mocks__/**/*"
  ],
  "include": [
    "src/**/*"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
